<Window x:Class="AppCenter.RunnerGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppCenter"
        mc:Ignorable="d"
        Title="Runner" Height="450" Width="800"
         WindowStyle="None">
    <Canvas Name="MyCanvas" Focusable="True" KeyDown="KeyIsDown" KeyUp="KeyIsUp" Background="LightCoral">
        <Rectangle Name="background" Height="400" Width="1262" Fill="Beige" Canvas.Left="0"/>
        <Rectangle Name="background2" Height="400" Width="1262" Fill="Lavender" Canvas.Left="1262"/>
        <Rectangle Name="ground" Height="32" Width="792" Fill="Black" Canvas.Top="387" Canvas.Left="0"/>
        <Rectangle Name="player" Height="104" Width="65" Fill="Brown" Canvas.Top="181" Canvas.Left="110" />
        <Rectangle Name="obstacle" Height="160" Width="160" Fill="Red" Canvas.Top="420" Canvas.Left="721"/>
        <Label Name="scoreText" FontSize="36" FontWeight="Bold" Content="Score: 0"/>
        <Button x:Name="HomeButton" Content="Home" Canvas.Left="10" Canvas.Top="63" Height="28" Width="64" Background="Transparent" Foreground="Black" FontWeight="Bold" BorderBrush="Black" Click="HomeButton_Click"/>


    </Canvas>
</Window>
